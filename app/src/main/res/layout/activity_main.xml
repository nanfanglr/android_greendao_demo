<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mvp.rui.android_greendao_demo.MainActivity">

    <TextView
        android:id="@+id/tv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/darker_gray"
        android:padding="10dp"
        android:text="     add     "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@android:color/darker_gray"
        android:padding="10dp"
        android:text="   query   "
        app:layout_constraintBaseline_toBaselineOf="@id/tv_add"
        app:layout_constraintLeft_toRightOf="@id/tv_add" />

    <TextView
        android:id="@+id/tv_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@android:color/darker_gray"
        android:padding="10dp"
        android:text="   update   "
        app:layout_constraintBaseline_toBaselineOf="@id/tv_query"
        app:layout_constraintLeft_toRightOf="@id/tv_query" />

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@android:color/darker_gray"
        android:padding="10dp"
        android:text="   delete   "
        app:layout_constraintBaseline_toBaselineOf="@id/tv_update"
        app:layout_constraintLeft_toRightOf="@id/tv_update" />

    <TextView
        android:id="@+id/tv_query_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_add" />

</android.support.constraint.ConstraintLayout>
